# ─── Database ───────────────────────────────────────────
DATABASE_URL=sqlite+aiosqlite:///./nl2i.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/nl2i

# ─── Redis ──────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── Auth / JWT ─────────────────────────────────────────
SECRET_KEY=change-me-to-a-random-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ─── LLM Provider ──────────────────────────────────────
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=sk-your-api-key-here
LLM_MODEL=gpt-4o

# ─── AWS Defaults ──────────────────────────────────────
AWS_DEFAULT_REGION=us-east-1

# ─── Terraform ──────────────────────────────────────────
TERRAFORM_WORKSPACES_DIR=./workspaces

# ─── Encryption Key (for storing user AWS creds) ───────
CREDENTIAL_ENCRYPTION_KEY=change-me-to-a-32-byte-base64-key
